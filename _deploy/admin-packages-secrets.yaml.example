# Kubernetes Secrets for EDK Admin Packages
# IMPORTANT: This is a template. DO NOT commit actual secrets to git!
#
# Usage:
# 1. Copy: cp admin-packages-secrets.yaml.example admin-packages-secrets.yaml
# 2. Encode values: echo -n "your_value" | base64
# 3. Replace all base64 placeholders below
# 4. Apply: kubectl apply -f admin-packages-secrets.yaml
#
# All values MUST be base64 encoded!

apiVersion: v1
kind: Secret
metadata:
  name: admin-packages-secrets
type: Opaque
data:
  # Database (External PostgreSQL - outside Kubernetes)
  # Format: postgresql://username:password@host:port/database
  # Example: postgresql://edk_admin:password@db.example.com:5432/edk_admin_packages
  # With SSL: postgresql://edk_admin:password@db.example.com:5432/edk_admin_packages?sslmode=require
  DATABASE_URL: "your_base64_encoded_database_url"

  # Rails
  SECRET_KEY_BASE: "your_base64_encoded_secret_key_base"

  # Przelewy24
  PRZELEWY24_CRC_KEY: "your_base64_encoded_crc_key"
  PRZELEWY24_API_KEY: "your_base64_encoded_api_key"

  # aPaczka
  APACZKA_APP_SECRET: "your_base64_encoded_apaczka_secret"

  # SMTP
  SMTP_USER_NAME: "your_base64_encoded_smtp_username"
  SMTP_PASSWORD: "your_base64_encoded_smtp_password"

---
# Quick Reference:
#
# Encode: echo -n "value" | base64
# Decode: echo "encoded" | base64 -d
#
# Example:
#   echo -n "e4b020fec8e5bac1" | base64
#   # Output: ZTRiMDIwZmVjOGU1YmFjMQ==
