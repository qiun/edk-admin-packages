<% content_for :title, "Zamówienie ##{@order.id}" %>
<% content_for :breadcrumb, "Zamówienie ##{@order.id}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Zamówienie #<%= @order.id %></h1>
      <p class="text-gray-600 dark:text-gray-400">Złożone: <%= @order.created_at.strftime("%d.%m.%Y %H:%M") %></p>
    </div>
    <%= link_to leader_orders_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors" do %>
      <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Wróć do listy
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Order Details -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Szczegóły zamówienia</h2>
      <dl class="space-y-4">
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Status</dt>
          <dd><%= status_badge(@order.status) %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Ilość</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @order.quantity %> pakietów</dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Cena za sztukę</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white">
            <%= number_to_currency(@order.price_per_unit, unit: "zł", format: "%n %u") %>
          </dd>
        </div>
        <div class="flex justify-between border-t border-gray-200 dark:border-gray-700 pt-4">
          <dt class="text-sm font-medium text-gray-900 dark:text-white">Suma</dt>
          <dd class="text-lg font-bold text-brand-500">
            <%= number_to_currency(@order.total_amount, unit: "zł", format: "%n %u") %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Delivery Address -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Adres dostawy (Paczkomat)</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Kod paczkomatu</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @order.locker_code %></dd>
        </div>
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Nazwa</dt>
          <dd class="text-sm text-gray-900 dark:text-white"><%= @order.locker_name %></dd>
        </div>
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Adres</dt>
          <dd class="text-sm text-gray-900 dark:text-white"><%= @order.locker_address %></dd>
        </div>
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Miasto</dt>
          <dd class="text-sm text-gray-900 dark:text-white">
            <%= @order.locker_post_code %> <%= @order.locker_city %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Shipment Info -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Wysyłka</h2>
      <% if @order.shipment.present? %>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Status</dt>
            <dd><%= status_badge(@order.shipment.status) %></dd>
          </div>
          <% if @order.shipment.waybill_number.present? %>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500 dark:text-gray-400">Nr listu przewozowego</dt>
              <dd class="text-sm font-mono text-gray-900 dark:text-white"><%= @order.shipment.waybill_number %></dd>
            </div>
          <% end %>
          <% if @order.shipment.tracking_url.present? %>
            <div class="pt-3 border-t border-gray-200 dark:border-gray-700">
              <%= link_to @order.shipment.tracking_url, target: "_blank", class: "inline-flex items-center text-brand-500 hover:text-brand-600 text-sm font-medium" do %>
                <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Śledź przesyłkę
              <% end %>
            </div>
          <% end %>
        </dl>
      <% else %>
        <div class="flex flex-col items-center justify-center py-8 text-center">
          <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <p class="text-sm text-gray-500 dark:text-gray-400">Wysyłka zostanie utworzona po potwierdzeniu zamówienia</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
