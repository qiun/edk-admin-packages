<div class="mb-6">
  <div class="flex justify-between items-center">
    <div>
      <h2 class="text-2xl font-semibold text-gray-900 dark:text-white">
        Transfery pakietów między rejonami
      </h2>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">
        Edycja: <%= @edition.name %>
      </p>
    </div>
    <%= link_to "Nowy transfer",
                new_leader_region_transfer_path,
                class: "inline-flex items-center justify-center rounded-lg bg-brand-500 px-4 py-2 text-center font-medium text-white hover:bg-brand-600 transition-colors" %>
  </div>
</div>

<div class="rounded-xl bg-white dark:bg-gray-800 shadow-sm">
  <div class="border-b border-gray-200 dark:border-gray-700 px-6 py-4">
    <h3 class="font-medium text-gray-900 dark:text-white">
      Lista transferów (<%= @transfers.count %>)
    </h3>
  </div>

  <% if @transfers.any? %>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900">
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Data
            </th>
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Z rejonu
            </th>
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Do rejonu
            </th>
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Ilość
            </th>
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Status
            </th>
            <th class="px-4 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">
              Akcje
            </th>
          </tr>
        </thead>
        <tbody>
          <% @transfers.each do |transfer| %>
            <tr class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-900">
              <td class="px-4 py-4 text-gray-900 dark:text-white">
                <%= l(transfer.created_at, format: :short) %>
              </td>
              <td class="px-4 py-4 text-gray-900 dark:text-white">
                <%= transfer.from_region.name %>
              </td>
              <td class="px-4 py-4 text-gray-900 dark:text-white">
                <%= transfer.to_region.name %>
              </td>
              <td class="px-4 py-4 font-semibold text-gray-900 dark:text-white">
                <%= transfer.quantity %>
              </td>
              <td class="px-4 py-4">
                <% if transfer.pending? %>
                  <span class="inline-flex rounded-full bg-amber-100 dark:bg-amber-900/30 px-3 py-1 text-sm font-medium text-amber-600 dark:text-amber-400">
                    Oczekujący
                  </span>
                <% elsif transfer.approved? %>
                  <span class="inline-flex rounded-full bg-green-100 dark:bg-green-900/30 px-3 py-1 text-sm font-medium text-green-600 dark:text-green-400">
                    Zatwierdzony
                  </span>
                <% else %>
                  <span class="inline-flex rounded-full bg-red-100 dark:bg-red-900/30 px-3 py-1 text-sm font-medium text-red-600 dark:text-red-400">
                    Anulowany
                  </span>
                <% end %>
              </td>
              <td class="px-4 py-4">
                <%= link_to "Szczegóły",
                            leader_region_transfer_path(transfer),
                            class: "text-brand-500 hover:text-brand-600 hover:underline transition-colors" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-6 py-8 text-center">
      <p class="text-gray-600 dark:text-gray-400">
        Brak transferów dla tej edycji
      </p>
    </div>
  <% end %>
</div>
