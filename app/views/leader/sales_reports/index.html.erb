<% content_for :title, "Raporty sprzedaży" %>
<% content_for :breadcrumb, "Raporty sprzedaży" %>

<div class="space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Raporty sprzedaży</h1>
      <p class="text-gray-600 dark:text-gray-400">Raportuj sprzedane pakiety</p>
    </div>
    <% if @can_report_more %>
      <%= link_to new_leader_sales_report_path, class: "inline-flex items-center px-4 py-2 bg-brand-500 text-white text-sm font-medium rounded-lg hover:bg-brand-600 transition-colors" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        Nowy raport
      <% end %>
    <% end %>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Sprzedane pakiety</p>
          <p class="mt-2 text-3xl font-bold text-gray-900 dark:text-white"><%= @total_sold %></p>
        </div>
        <div class="p-3 rounded-lg bg-green-100 dark:bg-green-900/30">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Do zapłaty</p>
          <p class="mt-2 text-3xl font-bold text-brand-600 dark:text-brand-400">
            <%= number_to_currency(@settlement.amount_due || 0, unit: "zł", format: "%n %u") %>
          </p>
        </div>
        <div class="p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Reports Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Historia raportów</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Sprzedane</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Uwagi</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @reports.each do |report| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">#<%= report.id %></td>
              <td class="px-6 py-4 text-center text-sm font-semibold text-gray-900 dark:text-white">
                <%= report.quantity_sold %> szt.
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= report.reported_at.strftime("%d.%m.%Y %H:%M") %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= report.notes.present? ? truncate(report.notes, length: 60) : "—" %>
              </td>
            </tr>
          <% end %>
          <% if @reports.empty? %>
            <tr>
              <td colspan="4" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                Brak raportów. <%= link_to "Dodaj pierwszy raport", new_leader_sales_report_path, class: "text-brand-500 hover:text-brand-600" if @can_report_more %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Info -->
  <div class="bg-blue-50 dark:bg-blue-900/30 rounded-xl p-6">
    <h3 class="text-sm font-semibold text-blue-900 dark:text-blue-200 mb-2">Informacje o raportowaniu</h3>
    <ul class="text-sm text-blue-800 dark:text-blue-300 space-y-1">
      <li>• Raportuj sprzedane pakiety regularnie</li>
      <li>• Można raportować tylko pakiety z dostarczonych zamówień</li>
      <li>• Każdy raport automatycznie aktualizuje rozliczenie</li>
      <li>• Pamiętaj o dokładnym podaniu ilości sprzedanych pakietów</li>
    </ul>
  </div>
</div>
