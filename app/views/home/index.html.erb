<div class="w-full">
  <h1 class="font-bold text-4xl mb-4">EDK Package Coordinator System</h1>
  <p class="text-lg text-gray-700 mb-6">System zarządzania pakietami EDK - Panel Administracyjny</p>

  <% if user_signed_in? %>
    <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded mb-4">
      <p>Zalogowany jako: <strong><%= current_user.email %></strong> (<%= current_user.role %>)</p>
    </div>
    <%= link_to "Wyloguj", destroy_user_session_path, data: { turbo_method: :delete }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  <% else %>
    <div class="space-x-4">
      <%= link_to "Zaloguj się", new_user_session_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
