<% content_for :page_title, "Cegiełki" %>

<!-- Page Header -->
<div class="mb-6">
  <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Opłacone cegiełki</h2>
  <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
    Lista wszystkich opłaconych darowizn
  </p>
</div>

<!-- Donations Table -->
<div class="rounded-xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900">
  <div class="overflow-x-auto">
    <table class="w-full">
      <thead>
        <tr class="border-b border-gray-100 dark:border-gray-800">
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">ID</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Darczyńca</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Ilość</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Kwota</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Paczkomat</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Status wysyłki</th>
          <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Data wpłaty</th>
          <th class="px-5 py-3 text-right text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Akcje</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <% if @donations.any? %>
          <% @donations.each do |donation| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50">
              <td class="px-5 py-4 text-sm font-medium text-gray-800 dark:text-white">#<%= donation.id %></td>
              <td class="px-5 py-4">
                <div>
                  <p class="text-sm font-medium text-gray-800 dark:text-white">
                    <%= donation.first_name %> <%= donation.last_name %>
                  </p>
                  <p class="text-xs text-gray-500"><%= donation.email %></p>
                </div>
              </td>
              <td class="px-5 py-4 text-sm font-semibold text-gray-800 dark:text-white">
                <%= donation.quantity %> szt.
              </td>
              <td class="px-5 py-4 text-sm font-medium text-gray-800 dark:text-white">
                <%= number_to_currency(donation.amount, unit: "zł", separator: ",", delimiter: " ", format: "%n %u") %>
              </td>
              <td class="px-5 py-4 text-sm text-gray-600 dark:text-gray-400">
                <%= donation.locker_code || '-' %>
              </td>
              <td class="px-5 py-4">
                <% if donation.shipment %>
                  <% status_classes = {
                    'pending' => 'bg-amber-50 text-amber-700 dark:bg-amber-500/15 dark:text-amber-400',
                    'shipped' => 'bg-green-50 text-green-700 dark:bg-green-500/15 dark:text-green-400',
                    'delivered' => 'bg-green-50 text-green-700 dark:bg-green-500/15 dark:text-green-400'
                  } %>
                  <% status_labels = {
                    'pending' => 'Oczekująca',
                    'shipped' => 'Wysłana',
                    'delivered' => 'Dostarczona'
                  } %>
                  <span class="inline-flex rounded-full px-2.5 py-0.5 text-xs font-medium <%= status_classes[donation.shipment.status] || 'bg-gray-50 text-gray-700' %>">
                    <%= status_labels[donation.shipment.status] || donation.shipment.status&.titleize || 'Nieznany' %>
                  </span>
                <% else %>
                  <span class="inline-flex rounded-full bg-red-50 px-2.5 py-0.5 text-xs font-medium text-red-700 dark:bg-red-500/15 dark:text-red-400">
                    Brak wysyłki
                  </span>
                <% end %>
              </td>
              <td class="px-5 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= donation.created_at.strftime('%d.%m.%Y %H:%M') %>
              </td>
              <td class="px-5 py-4 text-right">
                <%= link_to warehouse_donation_path(donation), class: "text-gray-400 hover:text-[#465fff]" do %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="8" class="px-5 py-8 text-center text-sm text-gray-500 dark:text-gray-400">
              Brak opłaconych cegiełek
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
