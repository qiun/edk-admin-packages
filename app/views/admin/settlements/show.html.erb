<% content_for :title, "Rozliczenie - #{@settlement.user.full_name}" %>
<% content_for :breadcrumb, "Rozliczenie" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div class="flex items-center">
      <div class="h-12 w-12 rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center text-brand-600 dark:text-brand-400 font-bold text-lg">
        <%= @settlement.user.first_name[0] %><%= @settlement.user.last_name[0] %>
      </div>
      <div class="ml-4">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @settlement.user.full_name %></h1>
        <p class="text-gray-600 dark:text-gray-400">Rozliczenie za edycję <%= @settlement.edition.year %></p>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <%= button_to "Przeliczy", recalculate_admin_settlement_path(@settlement), method: :post, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors" %>
      <% if @settlement.balance > 0 %>
        <%= link_to "#", onclick: "document.getElementById('payment-modal').classList.remove('hidden'); return false;", class: "inline-flex items-center px-4 py-2 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors" do %>
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Zarejestruj płatność
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Status</p>
          <div class="mt-2">
            <%= status_badge(@settlement.status) %>
          </div>
        </div>
        <div class="p-3 rounded-lg bg-gray-100 dark:bg-gray-700">
          <svg class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Cena za pakiet</p>
          <p class="mt-2 text-2xl font-bold text-gray-900 dark:text-white">
            <%= number_to_currency(@settlement.price_per_unit, unit: "zł", format: "%n %u") %>
          </p>
        </div>
        <div class="p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Do zapłaty</p>
          <p class="mt-2 text-2xl font-bold text-brand-600 dark:text-brand-400">
            <%= number_to_currency(@settlement.amount_due, unit: "zł", format: "%n %u") %>
          </p>
        </div>
        <div class="p-3 rounded-lg bg-brand-100 dark:bg-brand-900/30">
          <svg class="h-6 w-6 text-brand-600 dark:text-brand-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-gray-500 dark:text-gray-400">Wpłacone</p>
          <p class="mt-2 text-2xl font-bold <%= @settlement.fully_paid? ? 'text-green-600 dark:text-green-400' : 'text-gray-900 dark:text-white' %>">
            <%= number_to_currency(@settlement.amount_paid, unit: "zł", format: "%n %u") %>
          </p>
          <% if @settlement.balance > 0 %>
            <p class="text-xs text-red-600 dark:text-red-400 mt-1">
              pozostało: <%= number_to_currency(@settlement.balance, unit: "zł", format: "%n %u") %>
            </p>
          <% end %>
        </div>
        <div class="p-3 rounded-lg <%= @settlement.fully_paid? ? 'bg-green-100 dark:bg-green-900/30' : 'bg-gray-100 dark:bg-gray-700' %>">
          <svg class="h-6 w-6 <%= @settlement.fully_paid? ? 'text-green-600 dark:text-green-400' : 'text-gray-600 dark:text-gray-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Package Flow -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Przepływ pakietów</h2>
      <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
          <div class="flex items-center">
            <div class="p-2 rounded-lg bg-blue-100 dark:bg-blue-900/30">
              <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
              </svg>
            </div>
            <span class="ml-3 text-sm font-medium text-gray-900 dark:text-white">Wysłane</span>
          </div>
          <span class="text-lg font-bold text-blue-600 dark:text-blue-400"><%= @settlement.total_sent || 0 %> szt.</span>
        </div>

        <div class="flex items-center justify-between p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <div class="flex items-center">
            <div class="p-2 rounded-lg bg-red-100 dark:bg-red-900/30">
              <svg class="h-5 w-5 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
              </svg>
            </div>
            <span class="ml-3 text-sm font-medium text-gray-900 dark:text-white">Zwrócone</span>
          </div>
          <span class="text-lg font-bold text-red-600 dark:text-red-400"><%= @settlement.total_returned || 0 %> szt.</span>
        </div>

        <div class="flex items-center justify-between p-4 bg-green-50 dark:bg-green-900/20 rounded-lg border-2 border-green-200 dark:border-green-800">
          <div class="flex items-center">
            <div class="p-2 rounded-lg bg-green-100 dark:bg-green-900/30">
              <svg class="h-5 w-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <span class="ml-3 text-sm font-medium text-gray-900 dark:text-white">Sprzedane</span>
          </div>
          <span class="text-lg font-bold text-green-600 dark:text-green-400"><%= @settlement.total_sold || 0 %> szt.</span>
        </div>
      </div>
    </div>

    <!-- Leader Info -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Kontakt</h2>
      <dl class="space-y-3">
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Email</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @settlement.user.email %></dd>
        </div>
        <% if @settlement.user.phone.present? %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Telefon</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @settlement.user.phone %></dd>
          </div>
        <% end %>
        <% if @settlement.settled_at.present? %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Data rozliczenia</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @settlement.settled_at.strftime("%d.%m.%Y") %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <!-- Orders -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Zamówienia (<%= @orders.count %>)</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Ilość</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Akcje</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-3 text-sm font-medium text-gray-900 dark:text-white">#<%= order.id %></td>
              <td class="px-6 py-3 text-center text-sm text-gray-900 dark:text-white"><%= order.quantity %></td>
              <td class="px-6 py-3"><%= status_badge(order.status, :order) %></td>
              <td class="px-6 py-3 text-sm text-gray-500 dark:text-gray-400"><%= order.created_at.strftime("%d.%m.%Y") %></td>
              <td class="px-6 py-3 text-right">
                <%= link_to "Zobacz", admin_order_path(order), class: "text-brand-500 hover:text-brand-600 text-sm" %>
              </td>
            </tr>
          <% end %>
          <% if @orders.empty? %>
            <tr>
              <td colspan="5" class="px-6 py-8 text-center text-sm text-gray-500 dark:text-gray-400">
                Brak zamówień
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Sales Reports -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Raporty sprzedaży (<%= @reports.count %>)</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Sprzedane</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data raportu</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Uwagi</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @reports.each do |report| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-3 text-sm font-medium text-gray-900 dark:text-white">#<%= report.id %></td>
              <td class="px-6 py-3 text-center text-sm font-medium text-gray-900 dark:text-white"><%= report.quantity_sold %></td>
              <td class="px-6 py-3 text-sm text-gray-500 dark:text-gray-400"><%= report.reported_at.strftime("%d.%m.%Y") %></td>
              <td class="px-6 py-3 text-sm text-gray-500 dark:text-gray-400">
                <%= report.notes.present? ? truncate(report.notes, length: 50) : "—" %>
              </td>
            </tr>
          <% end %>
          <% if @reports.empty? %>
            <tr>
              <td colspan="4" class="px-6 py-8 text-center text-sm text-gray-500 dark:text-gray-400">
                Brak raportów sprzedaży
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Returns -->
  <% if @returns.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm">
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Zwroty (<%= @returns.count %>)</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead class="bg-gray-50 dark:bg-gray-700">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Ilość</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Powód</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            <% @returns.each do |ret| %>
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                <td class="px-6 py-3 text-sm font-medium text-gray-900 dark:text-white">#<%= ret.id %></td>
                <td class="px-6 py-3 text-center text-sm text-gray-900 dark:text-white"><%= ret.quantity %></td>
                <td class="px-6 py-3"><%= status_badge(ret.status) %></td>
                <td class="px-6 py-3 text-sm text-gray-500 dark:text-gray-400">
                  <%= ret.reason.present? ? truncate(ret.reason, length: 40) : "—" %>
                </td>
                <td class="px-6 py-3 text-sm text-gray-500 dark:text-gray-400"><%= ret.created_at.strftime("%d.%m.%Y") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<!-- Payment Modal -->
<div id="payment-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white dark:bg-gray-800">
    <div class="mt-3">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Zarejestruj płatność</h3>
      <%= form_with url: mark_paid_admin_settlement_path(@settlement), method: :post do |f| %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Kwota
          </label>
          <%= f.number_field :amount,
              value: @settlement.balance,
              step: 0.01,
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:text-white" %>
          <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
            Pozostało do zapłaty: <%= number_to_currency(@settlement.balance, unit: "zł", format: "%n %u") %>
          </p>
        </div>
        <div class="flex justify-end gap-2">
          <button type="button" onclick="document.getElementById('payment-modal').classList.add('hidden')" class="px-4 py-2 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500">
            Anuluj
          </button>
          <%= f.submit "Zapisz", class: "px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
