<% content_for :title, "Rozliczenia" %>
<% content_for :breadcrumb, "Rozliczenia" %>

<div class="space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Rozliczenia</h1>
      <p class="text-gray-600 dark:text-gray-400">Zarządzaj rozliczeniami z liderami okręgów</p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to export_admin_settlements_path(edition_id: @edition.id, format: :csv), class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors" do %>
        <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Eksportuj CSV
      <% end %>
    </div>
  </div>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Łącznie do zapłaty</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_to_currency(@summary[:total_due], unit: "zł", format: "%n %u") %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-green-100 dark:bg-green-900/30">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Wpłacone</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= number_to_currency(@summary[:total_paid], unit: "zł", format: "%n %u") %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-yellow-100 dark:bg-yellow-900/30">
          <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Oczekujące</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @summary[:pending_count] %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Settlements Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lider</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Wysłane</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Zwrócone</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Sprzedane</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Cena/szt</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Do zapłaty</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Wpłacone</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Akcje</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @settlements.each do |settlement| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="h-8 w-8 rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center text-brand-600 dark:text-brand-400 font-medium text-sm">
                    <%= settlement.user.first_name[0] %><%= settlement.user.last_name[0] %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900 dark:text-white"><%= settlement.user.full_name %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= settlement.user.email %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-center text-sm text-gray-900 dark:text-white">
                <%= settlement.total_sent || 0 %>
              </td>
              <td class="px-6 py-4 text-center text-sm text-gray-900 dark:text-white">
                <%= settlement.total_returned || 0 %>
              </td>
              <td class="px-6 py-4 text-center text-sm font-medium text-gray-900 dark:text-white">
                <%= settlement.total_sold || 0 %>
              </td>
              <td class="px-6 py-4 text-right text-sm text-gray-900 dark:text-white">
                <%= number_to_currency(settlement.price_per_unit, unit: "zł", format: "%n %u") %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-semibold text-gray-900 dark:text-white">
                <%= number_to_currency(settlement.amount_due, unit: "zł", format: "%n %u") %>
              </td>
              <td class="px-6 py-4 text-right text-sm text-gray-900 dark:text-white">
                <%= number_to_currency(settlement.amount_paid, unit: "zł", format: "%n %u") %>
              </td>
              <td class="px-6 py-4 text-center">
                <%= status_badge(settlement.status) %>
                <% if settlement.balance > 0 %>
                  <p class="text-xs text-red-600 dark:text-red-400 mt-1">
                    <%= number_to_currency(settlement.balance, unit: "zł", format: "%n %u") %> pozostało
                  </p>
                <% end %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                <%= link_to "Zobacz", admin_settlement_path(settlement), class: "text-brand-500 hover:text-brand-600" %>
                <% if settlement.pending? || settlement.calculated? %>
                  <%= button_to "Przeliczy", recalculate_admin_settlement_path(settlement), method: :post, class: "text-blue-600 hover:text-blue-700" %>
                <% end %>
              </td>
            </tr>
          <% end %>
          <% if @settlements.empty? %>
            <tr>
              <td colspan="9" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                Brak rozliczeń
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
