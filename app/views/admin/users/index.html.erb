<% content_for :page_title, "Użytkownicy" %>

<!-- Page Header -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-xl font-semibold text-gray-800 dark:text-white/90">Użytkownicy</h2>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      Zarządzaj użytkownikami systemu - liderami, magazynierami i adminami.
    </p>
  </div>
  <div class="flex items-center gap-3">
    <%= link_to import_admin_users_path, class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700" do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
      </svg>
      Import CSV
    <% end %>
    <%= link_to new_admin_user_path, class: "inline-flex items-center gap-2 rounded-lg bg-[#465fff] px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-[#3641f5] focus:outline-none focus:ring-2 focus:ring-[#465fff]/50" do %>
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
      </svg>
      Nowy użytkownik
    <% end %>
  </div>
</div>

<!-- Filters -->
<div class="mb-6 flex flex-wrap items-center gap-3">
  <%= link_to "Wszyscy", admin_users_path, class: "rounded-lg px-4 py-2 text-sm font-medium transition-colors #{params[:role].blank? ? 'bg-[#465fff] text-white' : 'bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400'}" %>
  <%= link_to "Liderzy okręgu", admin_users_path(role: 'leader'), class: "rounded-lg px-4 py-2 text-sm font-medium transition-colors #{params[:role] == 'leader' ? 'bg-[#465fff] text-white' : 'bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400'}" %>
  <%= link_to "Magazyn", admin_users_path(role: 'warehouse'), class: "rounded-lg px-4 py-2 text-sm font-medium transition-colors #{params[:role] == 'warehouse' ? 'bg-[#465fff] text-white' : 'bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400'}" %>
  <%= link_to "Admini", admin_users_path(role: 'admin'), class: "rounded-lg px-4 py-2 text-sm font-medium transition-colors #{params[:role] == 'admin' ? 'bg-[#465fff] text-white' : 'bg-white text-gray-700 border border-gray-200 hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400'}" %>
</div>

<!-- Users Table -->
<div class="overflow-hidden rounded-2xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-white/[0.03]">
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead>
        <tr class="border-b border-gray-200 bg-gray-50 dark:border-gray-800 dark:bg-gray-900">
          <th class="px-6 py-4 text-left">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Użytkownik</span>
          </th>
          <th class="px-6 py-4 text-left">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Telefon</span>
          </th>
          <th class="px-6 py-4 text-left">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Województwo</span>
          </th>
          <th class="px-6 py-4 text-left">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Rola</span>
          </th>
          <th class="px-6 py-4 text-right">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Cena pakietu</span>
          </th>
          <th class="px-6 py-4 text-left">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Utworzony</span>
          </th>
          <th class="px-6 py-4 text-right">
            <span class="text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Akcje</span>
          </th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
        <% if @users.any? %>
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50">
              <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-[#ecf3ff] text-sm font-medium text-[#465fff]">
                    <%= user.first_name.first.upcase %><%= user.last_name.first.upcase %>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-800 dark:text-white/90"><%= user.first_name %> <%= user.last_name %></p>
                    <span class="text-xs text-gray-500 dark:text-gray-400"><%= user.email %></span>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= user.phone || '-' %></span>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm text-gray-600 dark:text-gray-400"><%= user.voivodeship&.name || '-' %></span>
              </td>
              <td class="px-6 py-4">
                <% role_classes = {
                  'admin' => 'bg-purple-50 text-purple-700 dark:bg-purple-500/15 dark:text-purple-400',
                  'leader' => 'bg-blue-50 text-blue-700 dark:bg-blue-500/15 dark:text-blue-400',
                  'warehouse' => 'bg-green-50 text-green-700 dark:bg-green-500/15 dark:text-green-400'
                } %>
                <% role_labels = { 'admin' => 'Admin', 'leader' => 'Lider okręgu', 'warehouse' => 'Magazyn' } %>
                <span class="inline-flex rounded-full px-2.5 py-0.5 text-xs font-medium <%= role_classes[user.role] %>">
                  <%= role_labels[user.role] %>
                </span>
              </td>
              <td class="px-6 py-4 text-right">
                <% if user.leader? && @edition %>
                  <% leader_setting = @leader_settings[user.id] %>
                  <% price = leader_setting&.custom_price || @edition.default_price %>
                  <span class="text-sm font-medium text-gray-800 dark:text-white/90">
                    <%= number_to_currency(price, unit: 'zł', format: '%n %u') %>
                  </span>
                  <% if leader_setting&.custom_price %>
                    <span class="ml-1.5 inline-flex rounded-full bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-700 dark:bg-blue-500/15 dark:text-blue-400">
                      custom
                    </span>
                  <% end %>
                <% else %>
                  <span class="text-sm text-gray-400 dark:text-gray-500">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <span class="text-sm text-gray-500 dark:text-gray-400"><%= user.created_at.strftime('%d.%m.%Y') %></span>
              </td>
              <td class="px-6 py-4">
                <div class="flex items-center justify-end gap-2">
                  <%= link_to admin_user_path(user), class: "inline-flex items-center justify-center rounded-lg p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-800 dark:hover:text-white" do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <%= link_to edit_admin_user_path(user), class: "inline-flex items-center justify-center rounded-lg p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-800 dark:hover:text-white" do %>
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  <% if user != current_user %>
                    <%= button_to admin_user_path(user), method: :delete, class: "inline-flex items-center justify-center rounded-lg p-2 text-gray-500 hover:bg-red-100 hover:text-red-600 dark:text-gray-400 dark:hover:bg-red-900/30 dark:hover:text-red-400", data: { turbo_confirm: "Czy na pewno chcesz usunąć tego użytkownika?" } do %>
                      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="px-6 py-12 text-center">
              <div class="flex flex-col items-center">
                <svg class="h-12 w-12 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <p class="mt-4 text-sm font-medium text-gray-900 dark:text-white">Brak użytkowników</p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Dodaj pierwszego użytkownika, aby rozpocząć.</p>
                <%= link_to "Dodaj użytkownika", new_admin_user_path, class: "mt-4 inline-flex items-center gap-2 rounded-lg bg-[#465fff] px-4 py-2 text-sm font-medium text-white hover:bg-[#3641f5]" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Pagination -->
<% if @users.respond_to?(:total_pages) && @users.total_pages > 1 %>
  <div class="mt-6 flex items-center justify-between">
    <p class="text-sm text-gray-500 dark:text-gray-400">
      Pokazuje <%= @users.offset_value + 1 %> - <%= [@users.offset_value + @users.limit_value, @users.total_count].min %> z <%= @users.total_count %> użytkowników
    </p>
    <nav class="flex items-center gap-1">
      <%= link_to_if @users.prev_page, "←", admin_users_path(page: @users.prev_page, role: params[:role]), class: "rounded-lg px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800" %>
      <% @users.total_pages.times do |i| %>
        <%= link_to i + 1, admin_users_path(page: i + 1, role: params[:role]), class: "rounded-lg px-3 py-2 text-sm font-medium #{@users.current_page == i + 1 ? 'bg-[#465fff] text-white' : 'text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800'}" %>
      <% end %>
      <%= link_to_if @users.next_page, "→", admin_users_path(page: @users.next_page, role: params[:role]), class: "rounded-lg px-3 py-2 text-sm font-medium text-gray-500 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-800" %>
    </nav>
  </div>
<% end %>
