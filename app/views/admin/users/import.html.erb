<% content_for :title, "Import użytkowników" %>
<% content_for :breadcrumb, "Import CSV" %>

<div class="max-w-2xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Import użytkowników z CSV</h1>
    <p class="text-gray-600 dark:text-gray-400">Zaimportuj listę liderów z pliku CSV lub Excel.</p>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6 space-y-6">
    <%= form_with url: import_admin_users_path, method: :post, multipart: true, class: "space-y-6" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Plik CSV</label>
        <%= f.file_field :file, accept: ".csv,.xlsx,.xls", 
            class: "w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-brand-50 file:text-brand-700 hover:file:bg-brand-100 dark:file:bg-brand-900/30 dark:file:text-brand-400" %>
      </div>

      <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
        <h3 class="text-sm font-medium text-blue-800 dark:text-blue-400 mb-2">Wymagane kolumny:</h3>
        <ul class="text-sm text-blue-700 dark:text-blue-300 list-disc list-inside space-y-1">
          <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">email</code> - adres email (wymagane)</li>
          <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">first_name</code> lub <code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">imię</code> - imię</li>
          <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">last_name</code> lub <code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">nazwisko</code> - nazwisko</li>
          <li><code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">phone</code> lub <code class="bg-blue-100 dark:bg-blue-800 px-1 rounded">telefon</code> - numer telefonu (opcjonalne)</li>
        </ul>
      </div>

      <div class="flex justify-end gap-3">
        <%= link_to "Anuluj", admin_users_path, class: "px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors" %>
        <%= f.submit "Importuj", class: "px-4 py-2 bg-brand-500 text-white text-sm font-medium rounded-lg hover:bg-brand-600 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
