<% content_for :title, "Cegiełka ##{@donation.id}" %>
<% content_for :breadcrumb, "Cegiełka ##{@donation.id}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Cegiełka #<%= @donation.id %></h1>
      <p class="text-gray-600 dark:text-gray-400">Utworzona: <%= @donation.created_at.strftime("%d.%m.%Y %H:%M") %></p>
    </div>
    <% if @donation.payment_pending? %>
      <div>
        <%= button_to mark_as_paid_admin_donation_path(@donation),
            method: :post,
            class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500",
            data: { confirm: "Czy na pewno chcesz oznaczyć tę darowiznę jako opłaconą? Zostanie wysłany email potwierdzający." } do %>
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          Oznacz jako opłaconą
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Payment Details -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Szczegóły płatności</h2>
      <dl class="space-y-4">
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Status</dt>
          <dd><%= status_badge(@donation.payment_status) %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Ilość pakietów</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @donation.quantity %> szt.</dd>
        </div>
        <div class="flex justify-between border-t border-gray-200 dark:border-gray-700 pt-4">
          <dt class="text-sm font-medium text-gray-900 dark:text-white">Kwota</dt>
          <dd class="text-lg font-bold text-brand-500"><%= number_to_currency(@donation.amount, unit: "zł", format: "%n %u") %></dd>
        </div>
        <% if @donation.payment_id.present? %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">ID płatności</dt>
            <dd class="text-sm font-mono text-gray-900 dark:text-white"><%= @donation.payment_id %></dd>
          </div>
        <% end %>
        <% if @donation.payment_transaction_id.present? %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">ID transakcji</dt>
            <dd class="text-sm font-mono text-gray-900 dark:text-white"><%= @donation.payment_transaction_id %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Donor Info -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Darczyńca</h2>
      <div class="space-y-4">
        <div class="flex items-center">
          <div class="h-12 w-12 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center text-purple-600 dark:text-purple-400 font-bold text-lg">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-900 dark:text-white">
              <%= @donation.full_name.presence || "Anonim" %>
            </p>
            <p class="text-sm text-gray-500 dark:text-gray-400"><%= @donation.email %></p>
          </div>
        </div>
        <% if @donation.phone.present? %>
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Telefon</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @donation.phone %></dd>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Delivery Address -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Adres dostawy (Paczkomat)</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Kod paczkomatu</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @donation.locker_code %></dd>
        </div>
        <div>
          <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Nazwa</dt>
          <dd class="text-sm text-gray-900 dark:text-white"><%= @donation.locker_name %></dd>
        </div>
        <% if @donation.locker_address.present? %>
          <div>
            <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Adres</dt>
            <dd class="text-sm text-gray-900 dark:text-white"><%= @donation.locker_address %></dd>
          </div>
        <% end %>
        <% if @donation.locker_city.present? %>
          <div>
            <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Miasto</dt>
            <dd class="text-sm text-gray-900 dark:text-white">
              <%= @donation.locker_post_code.presence || "" %> <%= @donation.locker_city %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Shipment Info -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Wysyłka</h2>
      <% if @donation.shipment.present? %>
        <dl class="space-y-3">
          <div class="flex justify-between">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Status</dt>
            <dd><%= status_badge(@donation.shipment.status) %></dd>
          </div>
          <% if @donation.shipment.waybill_number.present? %>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500 dark:text-gray-400">Nr listu przewozowego</dt>
              <dd class="text-sm font-mono text-gray-900 dark:text-white"><%= @donation.shipment.waybill_number %></dd>
            </div>
          <% end %>
          <% if @donation.shipment.tracking_url.present? %>
            <div class="flex justify-between">
              <dt class="text-sm text-gray-500 dark:text-gray-400">Śledzenie</dt>
              <dd>
                <%= link_to @donation.shipment.tracking_url, target: "_blank", class: "text-brand-500 hover:text-brand-600 text-sm" do %>
                  Śledź przesyłkę →
                <% end %>
              </dd>
            </div>
          <% end %>
          <div class="flex justify-between border-t border-gray-200 dark:border-gray-700 pt-3">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Szczegóły wysyłki</dt>
            <dd>
              <%= link_to admin_shipment_path(@donation.shipment), class: "text-brand-500 hover:text-brand-600 text-sm" do %>
                Zobacz wysyłkę #<%= @donation.shipment.id %>
              <% end %>
            </dd>
          </div>
        </dl>
      <% else %>
        <div class="flex flex-col items-center justify-center py-8 text-center">
          <svg class="h-12 w-12 text-gray-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
          </svg>
          <p class="text-sm text-gray-500 dark:text-gray-400">Brak informacji o wysyłce</p>
          <% if @donation.payment_paid? %>
            <p class="text-xs text-gray-400 dark:text-gray-500 mt-1">Wysyłka zostanie utworzona po potwierdzeniu zamówienia</p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
