<% content_for :title, "Zwrot ##{@return.id}" %>
<% content_for :breadcrumb, "Zwrot ##{@return.id}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Zwrot #<%= @return.id %></h1>
      <p class="text-gray-600 dark:text-gray-400">Zgłoszono: <%= @return.created_at.strftime("%d.%m.%Y %H:%M") %></p>
    </div>
    <div class="flex items-center gap-2">
      <% if @return.requested? %>
        <%= button_to "Zatwierdź", approve_admin_return_path(@return), method: :post, class: "inline-flex items-center px-4 py-2 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors" %>
        <%= link_to "#", onclick: "document.getElementById('reject-modal').classList.remove('hidden'); return false;", class: "inline-flex items-center px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-lg hover:bg-red-600 transition-colors" do %>
          Odrzuć
        <% end %>
      <% elsif @return.approved? %>
        <div class="px-4 py-2 bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-400 text-sm font-medium rounded-lg">
          Oczekiwanie na wysyłkę
        </div>
      <% elsif @return.shipped? %>
        <%= button_to "Oznacz jako odebrane", mark_received_admin_return_path(@return), method: :post, class: "inline-flex items-center px-4 py-2 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors" %>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Return Details -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Szczegóły zwrotu</h2>
      <dl class="space-y-4">
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Status</dt>
          <dd><%= status_badge(@return.status) %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Ilość</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.quantity %> pakietów</dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Edycja</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.edition.year %></dd>
        </div>
        <% if @return.received_at.present? %>
          <div class="flex justify-between border-t border-gray-200 dark:border-gray-700 pt-4">
            <dt class="text-sm text-gray-500 dark:text-gray-400">Data odbioru</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.received_at.strftime("%d.%m.%Y %H:%M") %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <!-- Leader Info -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Lider okręgu</h2>
      <div class="flex items-center mb-4">
        <div class="h-12 w-12 rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center text-brand-600 dark:text-brand-400 font-bold">
          <%= @return.user.first_name[0] %><%= @return.user.last_name[0] %>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.user.full_name %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400"><%= @return.user.email %></p>
        </div>
      </div>
      <% if @return.user.phone.present? %>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500 dark:text-gray-400">Telefon</dt>
          <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.user.phone %></dd>
        </div>
      <% end %>
    </div>

    <!-- Locker Info -->
    <% if @return.locker_code.present? %>
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Miejsce odbioru (Paczkomat)</h2>
        <dl class="space-y-3">
          <div>
            <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Kod paczkomatu</dt>
            <dd class="text-sm font-medium text-gray-900 dark:text-white"><%= @return.locker_code %></dd>
          </div>
          <% if @return.locker_name.present? %>
            <div>
              <dt class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-1">Nazwa</dt>
              <dd class="text-sm text-gray-900 dark:text-white"><%= @return.locker_name %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    <% end %>

    <!-- Notes -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Uwagi</h2>
      <% if @return.notes.present? %>
        <div class="prose dark:prose-invert max-w-none">
          <p class="text-sm text-gray-900 dark:text-white whitespace-pre-line"><%= @return.notes %></p>
        </div>
      <% else %>
        <p class="text-sm text-gray-500 dark:text-gray-400 italic">Brak uwag</p>
      <% end %>

      <!-- Edit Notes Form -->
      <% if @return.requested? || @return.approved? %>
        <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
          <%= form_with model: @return, url: admin_return_path(@return), method: :patch, class: "space-y-3" do |f| %>
            <%= f.text_area :notes,
                rows: 3,
                placeholder: "Dodaj uwagi dotyczące zwrotu...",
                class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:text-white text-sm" %>
            <%= f.submit "Zapisz uwagi", class: "px-4 py-2 bg-brand-500 text-white text-sm font-medium rounded-lg hover:bg-brand-600 transition-colors" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Status Timeline -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-6">Historia statusu</h2>
    <div class="relative">
      <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700"></div>
      <div class="space-y-6">
        <!-- Requested -->
        <div class="relative flex items-start">
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @return.requested? || @return.approved? || @return.shipped? || @return.received? || @return.rejected? ? 'bg-brand-500' : 'bg-gray-300 dark:bg-gray-600' %> z-10">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium text-gray-900 dark:text-white">Zgłoszono</p>
            <p class="text-xs text-gray-500 dark:text-gray-400"><%= @return.created_at.strftime("%d.%m.%Y %H:%M") %></p>
          </div>
        </div>

        <!-- Approved -->
        <div class="relative flex items-start">
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @return.approved? || @return.shipped? || @return.received? ? 'bg-brand-500' : (@return.rejected? ? 'bg-gray-300 dark:bg-gray-600' : 'bg-gray-300 dark:bg-gray-600') %> z-10">
            <% if @return.approved? || @return.shipped? || @return.received? %>
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            <% else %>
              <div class="w-2 h-2 bg-white rounded-full"></div>
            <% end %>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium <%= @return.approved? || @return.shipped? || @return.received? ? 'text-gray-900 dark:text-white' : 'text-gray-500 dark:text-gray-400' %>">
              Zatwierdzone
            </p>
            <% if @return.approved? || @return.shipped? || @return.received? %>
              <p class="text-xs text-gray-500 dark:text-gray-400"><%= @return.updated_at.strftime("%d.%m.%Y %H:%M") %></p>
            <% end %>
          </div>
        </div>

        <!-- Shipped -->
        <div class="relative flex items-start">
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @return.shipped? || @return.received? ? 'bg-brand-500' : 'bg-gray-300 dark:bg-gray-600' %> z-10">
            <% if @return.shipped? || @return.received? %>
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            <% else %>
              <div class="w-2 h-2 bg-white rounded-full"></div>
            <% end %>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium <%= @return.shipped? || @return.received? ? 'text-gray-900 dark:text-white' : 'text-gray-500 dark:text-gray-400' %>">
              Wysłane
            </p>
          </div>
        </div>

        <!-- Received -->
        <div class="relative flex items-start">
          <div class="flex items-center justify-center w-8 h-8 rounded-full <%= @return.received? ? 'bg-green-500' : 'bg-gray-300 dark:bg-gray-600' %> z-10">
            <% if @return.received? %>
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
              </svg>
            <% else %>
              <div class="w-2 h-2 bg-white rounded-full"></div>
            <% end %>
          </div>
          <div class="ml-4 flex-1">
            <p class="text-sm font-medium <%= @return.received? ? 'text-gray-900 dark:text-white' : 'text-gray-500 dark:text-gray-400' %>">
              Odebrane w magazynie
            </p>
            <% if @return.received_at.present? %>
              <p class="text-xs text-gray-500 dark:text-gray-400"><%= @return.received_at.strftime("%d.%m.%Y %H:%M") %></p>
            <% end %>
          </div>
        </div>

        <!-- Rejected (if applicable) -->
        <% if @return.rejected? %>
          <div class="relative flex items-start">
            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-red-500 z-10">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-4 flex-1">
              <p class="text-sm font-medium text-red-600 dark:text-red-400">Odrzucone</p>
              <p class="text-xs text-gray-500 dark:text-gray-400"><%= @return.updated_at.strftime("%d.%m.%Y %H:%M") %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Reject Modal -->
<div id="reject-modal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-lg bg-white dark:bg-gray-800">
    <div class="mt-3">
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Odrzuć zwrot</h3>
      <%= form_with url: reject_admin_return_path(@return), method: :post do |f| %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
            Powód odrzucenia
          </label>
          <%= text_area_tag :reason,
              nil,
              rows: 4,
              required: true,
              placeholder: "Podaj powód odrzucenia zwrotu...",
              class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-brand-500 focus:border-brand-500 dark:bg-gray-700 dark:text-white" %>
        </div>
        <div class="flex justify-end gap-2">
          <button type="button" onclick="document.getElementById('reject-modal').classList.add('hidden')" class="px-4 py-2 bg-gray-300 dark:bg-gray-600 text-gray-700 dark:text-gray-200 rounded-lg hover:bg-gray-400 dark:hover:bg-gray-500">
            Anuluj
          </button>
          <%= f.submit "Odrzuć zwrot", class: "px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
