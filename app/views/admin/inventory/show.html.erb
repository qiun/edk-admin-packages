<% content_for :page_title, "Magazyn" %>

<div class="space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Magazyn</h1>
      <p class="text-gray-600 dark:text-gray-400">Zarządzaj stanem magazynowym pakietów</p>
    </div>
    <%= link_to movements_admin_inventory_path, class: "inline-flex items-center gap-2 rounded-lg bg-gray-600 px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-gray-700" do %>
      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      Historia ruchów
    <% end %>
  </div>

  <!-- Stock Summary Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-blue-100 dark:bg-blue-900/30">
          <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Całkowity stan</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @inventory.total_stock %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-green-100 dark:bg-green-900/30">
          <svg class="h-6 w-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Dostępne</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @inventory.available %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-yellow-100 dark:bg-yellow-900/30">
          <svg class="h-6 w-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Zarezerwowane</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @inventory.reserved %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-lg bg-purple-100 dark:bg-purple-900/30">
          <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M13 5H3v11h1.17a3.001 3.001 0 015.66 0h4.34a3.001 3.001 0 015.66 0H21v-5.59l-3-3.41H13V5zm0 2v3h3.59L18 8.17V7h-5z"/>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm text-gray-500 dark:text-gray-400">Wysłane</p>
          <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @inventory.shipped %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Add Stock Form -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Dodaj pakiety do magazynu</h2>
    <%= form_with url: add_stock_admin_inventory_path, method: :post, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= label_tag :quantity, "Ilość pakietów", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= number_field_tag :quantity, nil, min: 1, required: true, class: "block w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 text-gray-900 dark:text-white focus:border-blue-500 focus:ring-blue-500" %>
        </div>
        <div>
          <%= label_tag :notes, "Notatka (opcjonalnie)", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
          <%= text_field_tag :notes, nil, class: "block w-full rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 px-3 py-2 text-gray-900 dark:text-white focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>
      <div>
        <%= button_tag type: "submit", class: "inline-flex items-center gap-2 rounded-lg bg-blue-600 px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-blue-700" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
          </svg>
          Dodaj pakiety
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Recent Moves -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Ostatnie ruchy magazynowe</h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Typ</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Ilość</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Notatka</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Dodane przez</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @recent_moves.each do |move| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= move.created_at.strftime("%d.%m.%Y %H:%M") %>
              </td>
              <td class="px-6 py-4">
                <% move_type_labels = {
                  'stock_in' => 'Dostawa',
                  'reserve' => 'Rezerwacja',
                  'release' => 'Zwolnienie',
                  'ship' => 'Wysyłka',
                  'return_received' => 'Zwrot'
                } %>
                <span class="inline-flex rounded-full px-2.5 py-0.5 text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
                  <%= move_type_labels[move.move_type] || move.move_type&.humanize %>
                </span>
              </td>
              <td class="px-6 py-4 text-center text-sm font-medium text-gray-900 dark:text-white">
                <%= move.quantity %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= move.notes || '-' %>
              </td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= move.created_by&.full_name || '-' %>
              </td>
            </tr>
          <% end %>
          <% if @recent_moves.empty? %>
            <tr>
              <td colspan="5" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                Brak ruchów magazynowych
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
