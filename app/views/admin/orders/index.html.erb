<% content_for :title, "Zamówienia" %>
<% content_for :breadcrumb, "Zamówienia" %>

<div class="space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Zamówienia</h1>
      <p class="text-gray-600 dark:text-gray-400">Zarządzaj zamówieniami pakietów od liderów</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm">
    <div class="flex flex-wrap gap-2">
      <%= link_to "Wszystkie", admin_orders_path(status: :all),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'all' ? 'bg-brand-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Oczekujące", admin_orders_path(status: :pending),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status].blank? || params[:status] == 'pending' ? 'bg-yellow-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Potwierdzone", admin_orders_path(status: :confirmed), 
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'confirmed' ? 'bg-blue-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Wysłane", admin_orders_path(status: :shipped), 
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'shipped' ? 'bg-purple-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Dostarczone", admin_orders_path(status: :delivered), 
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'delivered' ? 'bg-green-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
    </div>
  </div>

  <!-- Orders Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Lider</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Ilość</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Paczkomat</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Akcje</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">#<%= order.id %></td>
              <td class="px-6 py-4">
                <div class="flex items-center">
                  <div class="h-8 w-8 rounded-full bg-brand-100 dark:bg-brand-900/30 flex items-center justify-center text-brand-600 dark:text-brand-400 font-medium text-sm">
                    <%= order.user.first_name[0] %><%= order.user.last_name[0] %>
                  </div>
                  <div class="ml-3">
                    <p class="text-sm font-medium"><%= link_to order.user.full_name, admin_user_path(order.user), class: "text-brand-500 hover:text-brand-600" %></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= order.user.email %></p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 dark:text-white"><%= order.quantity %> szt.</td>
              <td class="px-6 py-4">
                <p class="text-sm text-gray-900 dark:text-white"><%= order.locker_code %></p>
                <p class="text-xs text-gray-500 dark:text-gray-400"><%= order.locker_city %></p>
              </td>
              <td class="px-6 py-4"><%= status_badge(order.status, :order) %></td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= order.created_at.strftime("%d.%m.%Y") %><br>
                <%= order.created_at.strftime("%H:%M:%S") %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-1">
                  <%= link_to admin_order_path(order), class: "inline-flex p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-200 rounded-lg transition-colors", title: "Zobacz szczegóły" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <% if order.pending? %>
                    <%= button_to confirm_admin_order_path(order), method: :post, class: "inline-flex p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-200 rounded-lg transition-colors", title: "Potwierdź zamówienie", form: { style: "display: inline-block;" } do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @orders.empty? %>
            <tr>
              <td colspan="7" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                Brak zamówień
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
