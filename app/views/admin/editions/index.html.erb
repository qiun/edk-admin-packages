<% content_for :page_title, "Edycje" %>

<!-- Page Header -->
<div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
  <div>
    <h2 class="text-xl font-semibold text-gray-800 dark:text-white/90">Edycje</h2>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      Zarządzaj edycjami akcji Ekstremalnej Drogi Krzyżowej.
    </p>
  </div>
  <%= link_to new_admin_edition_path, class: "inline-flex items-center gap-2 rounded-lg bg-[#465fff] px-4 py-2.5 text-sm font-medium text-white shadow-sm hover:bg-[#3641f5] focus:outline-none focus:ring-2 focus:ring-[#465fff]/50" do %>
    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
    </svg>
    Nowa edycja
  <% end %>
</div>

<!-- Editions Grid -->
<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% @editions.each do |edition| %>
    <div class="rounded-2xl border border-gray-200 bg-white p-6 dark:border-gray-800 dark:bg-white/[0.03] <%= edition.is_active ? 'ring-2 ring-[#465fff] ring-offset-2 dark:ring-offset-gray-900' : '' %>">
      <div class="mb-4 flex items-start justify-between">
        <div>
          <h3 class="text-lg font-semibold text-gray-800 dark:text-white/90"><%= edition.name %></h3>
          <% if edition.is_active %>
            <span class="mt-1 inline-flex items-center rounded-full bg-[#ecf3ff] px-2.5 py-0.5 text-xs font-medium text-[#465fff]">
              Aktywna
            </span>
          <% end %>
        </div>
        <div class="flex items-center gap-1">
          <%= link_to edit_admin_edition_path(edition), class: "rounded-lg p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-800 dark:hover:text-white" do %>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          <% end %>
        </div>
      </div>

      <div class="space-y-3">
        <div class="flex items-center justify-between text-sm">
          <span class="text-gray-500 dark:text-gray-400">Status zamówień</span>
          <span class="font-medium <%= edition.ordering_locked ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' %>">
            <%= edition.ordering_locked ? 'Zamknięte' : 'Otwarte' %>
          </span>
        </div>

        <% if edition.inventory %>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500 dark:text-gray-400">Pakiety w magazynie</span>
            <span class="font-medium text-gray-800 dark:text-white"><%= number_with_delimiter(edition.inventory.total_stock) %></span>
          </div>
          <div class="flex items-center justify-between text-sm">
            <span class="text-gray-500 dark:text-gray-400">Dostępne</span>
            <span class="font-medium text-green-600 dark:text-green-400"><%= number_with_delimiter(edition.inventory.available) %></span>
          </div>
        <% end %>
      </div>

      <div class="mt-5 flex items-center gap-2 border-t border-gray-100 pt-5 dark:border-gray-800">
        <% unless edition.is_active %>
          <%= button_to activate_admin_edition_path(edition), method: :post, class: "flex-1 rounded-lg bg-[#465fff] px-4 py-2 text-center text-sm font-medium text-white hover:bg-[#3641f5]" do %>
            Aktywuj
          <% end %>
        <% else %>
          <%= link_to admin_inventory_path, class: "flex-1 rounded-lg border border-gray-200 bg-white px-4 py-2 text-center text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700" do %>
            Zarządzaj magazynem
          <% end %>
        <% end %>
        <%= link_to admin_edition_path(edition), class: "rounded-lg border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700" do %>
          Szczegóły
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @editions.empty? %>
    <div class="col-span-full rounded-2xl border border-dashed border-gray-300 bg-gray-50 p-12 text-center dark:border-gray-700 dark:bg-gray-800/50">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <h3 class="mt-4 text-sm font-medium text-gray-900 dark:text-white">Brak edycji</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Utwórz pierwszą edycję, aby rozpocząć zarządzanie akcją.</p>
      <%= link_to "Utwórz edycję", new_admin_edition_path, class: "mt-4 inline-flex items-center gap-2 rounded-lg bg-[#465fff] px-4 py-2 text-sm font-medium text-white hover:bg-[#3641f5]" %>
    </div>
  <% end %>
</div>
