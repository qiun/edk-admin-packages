<% content_for :title, "Magazyn" %>
<% content_for :breadcrumb, "Magazyn" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Magazyn</h2>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Stan magazynowy dla edycji: <%= current_edition.name %></p>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to movements_admin_inventory_path, class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:hover:bg-gray-700" do %>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
        </svg>
        Historia ruchów
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-5">
    <div class="rounded-xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-gray-900">
      <p class="text-sm text-gray-500 dark:text-gray-400">Całkowity zapas</p>
      <p class="mt-1 text-2xl font-bold text-gray-800 dark:text-white"><%= number_with_delimiter(@inventory.total_stock) %></p>
    </div>
    <div class="rounded-xl bg-green-50 p-5 dark:bg-green-900/20">
      <p class="text-sm text-gray-500 dark:text-gray-400">Dostępne</p>
      <p class="mt-1 text-2xl font-bold text-green-600 dark:text-green-400"><%= number_with_delimiter(@inventory.available) %></p>
    </div>
    <div class="rounded-xl bg-amber-50 p-5 dark:bg-amber-900/20">
      <p class="text-sm text-gray-500 dark:text-gray-400">Zarezerwowane</p>
      <p class="mt-1 text-2xl font-bold text-amber-600 dark:text-amber-400"><%= number_with_delimiter(@inventory.reserved) %></p>
    </div>
    <div class="rounded-xl bg-blue-50 p-5 dark:bg-blue-900/20">
      <p class="text-sm text-gray-500 dark:text-gray-400">Wysłane</p>
      <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400"><%= number_with_delimiter(@inventory.shipped) %></p>
    </div>
    <div class="rounded-xl bg-purple-50 p-5 dark:bg-purple-900/20">
      <p class="text-sm text-gray-500 dark:text-gray-400">Zwrócone</p>
      <p class="mt-1 text-2xl font-bold text-purple-600 dark:text-purple-400"><%= number_with_delimiter(@inventory.returned) %></p>
    </div>
  </div>

  <!-- Add Stock Form -->
  <div class="rounded-2xl border border-gray-200 bg-white p-5 dark:border-gray-800 dark:bg-gray-900 sm:p-6">
    <h2 class="mb-4 text-base font-medium text-gray-800 dark:text-white/90">Dodaj pakiety do magazynu</h2>
    <%= form_with url: add_stock_admin_inventory_path, method: :post, class: "flex flex-wrap gap-4 items-end" do |f| %>
      <div class="flex-1 min-w-[200px]">
        <%= f.label :quantity, "Ilość", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= f.number_field :quantity, min: 1, step: 1, class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-[#465fff] focus:ring-3 focus:ring-[#465fff]/10 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-[#465fff]", placeholder: "np. 500" %>
      </div>
      <div class="flex-2 min-w-[300px]">
        <%= f.label :notes, "Notatka (opcjonalne)", class: "mb-1.5 block text-sm font-medium text-gray-700 dark:text-gray-400" %>
        <%= f.text_field :notes, class: "h-11 w-full rounded-lg border border-gray-300 bg-transparent px-4 py-2.5 text-sm text-gray-800 placeholder:text-gray-400 focus:border-[#465fff] focus:ring-3 focus:ring-[#465fff]/10 focus:outline-hidden dark:border-gray-700 dark:bg-gray-900 dark:text-white/90 dark:placeholder:text-white/30 dark:focus:border-[#465fff]", placeholder: "np. Dostawa z drukarni" %>
      </div>
      <%= f.submit "Dodaj do magazynu", class: "h-11 px-5 bg-[#465fff] text-white text-sm font-medium rounded-lg hover:bg-[#3641f5] transition-colors cursor-pointer" %>
    <% end %>
  </div>

  <!-- Recent Movements -->
  <div class="rounded-xl border border-gray-200 bg-white dark:border-gray-800 dark:bg-gray-900">
    <div class="flex items-center justify-between border-b border-gray-100 px-5 py-4 dark:border-gray-800">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-white">Ostatnie ruchy magazynowe</h3>
    </div>
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-100 dark:border-gray-800">
            <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Data</th>
            <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Typ</th>
            <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Ilość</th>
            <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Użytkownik</th>
            <th class="px-5 py-3 text-left text-xs font-medium uppercase text-gray-500 dark:text-gray-400">Notatka</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
          <% @moves.each do |move| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50">
              <td class="px-5 py-4 text-sm text-gray-800 dark:text-white"><%= move.created_at.strftime("%d.%m.%Y %H:%M") %></td>
              <td class="px-5 py-4">
                <% status_classes = {
                  'stock_in' => 'bg-green-50 text-green-700 dark:bg-green-500/15 dark:text-green-400',
                  'stock_out' => 'bg-red-50 text-red-700 dark:bg-red-500/15 dark:text-red-400',
                  'reserve' => 'bg-amber-50 text-amber-700 dark:bg-amber-500/15 dark:text-amber-400',
                  'release' => 'bg-blue-50 text-blue-700 dark:bg-blue-500/15 dark:text-blue-400',
                  'ship' => 'bg-purple-50 text-purple-700 dark:bg-purple-500/15 dark:text-purple-400',
                  'return_received' => 'bg-teal-50 text-teal-700 dark:bg-teal-500/15 dark:text-teal-400',
                  'adjustment' => 'bg-gray-50 text-gray-700 dark:bg-gray-500/15 dark:text-gray-400'
                } %>
                <% move_names = { stock_in: "Przyjęcie", stock_out: "Wydanie", reserve: "Rezerwacja", release: "Zwolnienie", ship: "Wysyłka", return_received: "Zwrot", adjustment: "Korekta" } %>
                <span class="inline-flex rounded-full px-2.5 py-0.5 text-xs font-medium <%= status_classes[move.move_type] || status_classes['adjustment'] %>">
                  <%= move_names[move.move_type.to_sym] || move.move_type %>
                </span>
              </td>
              <td class="px-5 py-4 text-sm font-medium <%= move.quantity > 0 ? 'text-green-600' : 'text-red-600' %>">
                <%= move.quantity > 0 ? "+#{move.quantity}" : move.quantity %>
              </td>
              <td class="px-5 py-4 text-sm text-gray-500 dark:text-gray-400"><%= move.created_by&.full_name || "System" %></td>
              <td class="px-5 py-4 text-sm text-gray-500 dark:text-gray-400"><%= move.notes.presence || "—" %></td>
            </tr>
          <% end %>
          <% if @moves.empty? %>
            <tr>
              <td colspan="5" class="px-5 py-8 text-center text-sm text-gray-500 dark:text-gray-400">
                Brak ruchów magazynowych
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
