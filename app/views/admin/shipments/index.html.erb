<% content_for :title, "Wysyłki" %>
<% content_for :breadcrumb, "Wysyłki" %>

<div class="space-y-6">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Wysyłki</h1>
      <p class="text-gray-600 dark:text-gray-400">Zarządzaj wysyłkami pakietów przez aPaczka.pl</p>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-lg p-4 shadow-sm">
    <div class="flex flex-wrap gap-2">
      <%= link_to "Wszystkie", admin_shipments_path(type: params[:type], status: :all),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'all' ? 'bg-brand-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Oczekujące na etykietę", admin_shipments_path(type: params[:type], status: :pending),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status].blank? || params[:status] == 'pending' ? 'bg-yellow-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Etykieta gotowa", admin_shipments_path(type: params[:type], status: :label_ready),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'label_ready' ? 'bg-indigo-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Odebrana przez kuriera", admin_shipments_path(type: params[:type], status: :picked_up),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'picked_up' ? 'bg-blue-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "W transporcie", admin_shipments_path(type: params[:type], status: :in_transit),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'in_transit' ? 'bg-cyan-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Gotowa do odbioru", admin_shipments_path(type: params[:type], status: :ready_for_pickup),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'ready_for_pickup' ? 'bg-teal-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Dostarczone", admin_shipments_path(type: params[:type], status: :delivered),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'delivered' ? 'bg-green-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Zwrócone", admin_shipments_path(type: params[:type], status: :returned),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'returned' ? 'bg-orange-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
      <%= link_to "Nieudane", admin_shipments_path(type: params[:type], status: :failed),
          class: "px-3 py-1.5 rounded-lg text-sm font-medium transition-colors #{params[:status] == 'failed' ? 'bg-red-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300'}" %>
    </div>
  </div>

  <!-- Shipments Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-700">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">#</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Źródło</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Nr listu</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Data</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-300 uppercase">Akcje</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @shipments.each do |shipment| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">#<%= shipment.id %></td>
              <td class="px-6 py-4">
                <% if shipment.order.present? %>
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= link_to "Zamówienie ##{shipment.order.id}", admin_order_path(shipment.order), class: "text-brand-500 hover:text-brand-600" %>
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= shipment.order.user.full_name %></p>
                  </div>
                <% elsif shipment.donation.present? %>
                  <div>
                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= link_to "Cegiełka ##{shipment.donation.id}", admin_donation_path(shipment.donation), class: "text-brand-500 hover:text-brand-600" %>
                    </p>
                    <p class="text-xs text-gray-500 dark:text-gray-400"><%= shipment.donation.full_name %></p>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% if shipment.waybill_number.present? %>
                  <span class="text-sm font-mono text-gray-900 dark:text-white"><%= shipment.waybill_number %></span>
                <% else %>
                  <span class="text-sm text-gray-400 dark:text-gray-500">—</span>
                <% end %>
              </td>
              <td class="px-6 py-4"><%= status_badge(shipment.status, :shipment) %></td>
              <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
                <%= shipment.created_at.strftime("%d.%m.%Y") %><br>
                <%= shipment.created_at.strftime("%H:%M:%S") %>
              </td>
              <td class="px-6 py-4 text-right text-sm font-medium">
                <div class="flex items-center justify-end gap-1">
                  <%= link_to admin_shipment_path(shipment), class: "inline-flex p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-200 rounded-lg transition-colors", title: "Zobacz szczegóły" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                  <% end %>
                  <% if shipment.tracking_url.present? %>
                    <%= link_to shipment.tracking_url, target: "_blank", class: "inline-flex p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-200 rounded-lg transition-colors", title: "Śledź przesyłkę" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    <% end %>
                  <% end %>
                  <% if shipment.apaczka_order_id.present? && %w[label_ready picked_up in_transit ready_for_pickup delivered].include?(shipment.status) %>
                    <%= link_to download_waybill_admin_shipment_path(shipment), class: "inline-flex p-2 text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-white/5 dark:hover:text-gray-200 rounded-lg transition-colors", title: "Pobierz etykietę" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m.75 12 3 3m0 0 3-3m-3 3v-6m-1.5-9H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/>
                      </svg>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          <% if @shipments.empty? %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                Brak wysyłek
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
